<section>
  <h2>Trucks</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Truck no</th>
        <th scope="col">Truck type</th>
        <th scope="col">License plate</th>
        <th scope="col">License expires</th>
        <th scope="col">Owner</th>
        <th scope="col">Make</th>
        <th scope="col">Model</th>
        <th scope="col">Manufactured year</th>
        <th scope="col">Vin number</th>
        <th scope="col">Total kilometres</th>
        <th scope="col">Current location</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.truck_no %></td>
        <td><%= truck.truck_type %></td>
        <td><%= truck.license_plate %></td>
        <td><%= truck.license_expires %></td>
        <td><%= truck.owner %></td>
        <td><%= truck.make %></td>
        <td><%= truck.model %></td>
        <td><%= truck.manufactured_year %></td>
        <td><%= truck.vin_number %></td>
        <td><%= truck.total_kilometres %></td>
        <td><%= truck.current_location %></td>
    	  <td><%= link_to '', truck, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_truck_path(truck), :class => 'button edit', :title => 'Edit' %> <%= link_to '', truck, method: :delete, data: { confirm: 'Are you sure you want to delete this truck?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Truck', new_truck_path, :class => 'button new' %></p>
</section>
