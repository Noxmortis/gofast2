<h1>Trucks</h1>

<table>
  <thead>
  <tr>
    <th>Last service</th>
    <th>Last safety</th>
    <th>Truck no</th>
    <th>Type</th>
    <th>License plate</th>
    <th>License expires</th>
    <th>Owned</th>
    <th>Make</th>
    <th>Model</th>
    <th>Manufactured year</th>
    <th>Vin number</th>
    <th>Next service kilometres</th>
    <th>Next safety date</th>
    <th>Total kilometres</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.last_service_id %></td>
    <td><%= truck.last_safety_id %></td>
    <td><%= truck.truck_no %></td>
    <td><%= truck.type %></td>
    <td><%= truck.license_plate %></td>
    <td><%= truck.license_expires %></td>
    <td><%= truck.owned %></td>
    <td><%= truck.make %></td>
    <td><%= truck.model %></td>
    <td><%= truck.manufactured_year %></td>
    <td><%= truck.vin_number %></td>
    <td><%= truck.next_service_kilometres %></td>
    <td><%= truck.next_safety_date %></td>
    <td><%= truck.total_kilometres %></td>
    <td><%= link_to 'Show', truck, :class => 'ym-button ym-small ym-play ym-success' %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck), :class => 'ym-button ym-small ym-edit ym-warning' %></td>
    <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Truck', new_truck_path, :class => 'ym-button ym-add' %>
