<section>
  <h2>Trucks</h2>
  <%= form_tag trucks_path, :method => 'get', :class => 'search' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
		<%= label_tag :column %>
		<%= select_tag :column, options_for_select(Truck.translated_searchable_columns(['id']), params[:column]) %>
		<%= label_tag :search %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Submit' %>
  <% end %>
  <p><%= link_to 'New Truck', new_truck_path, :class => 'button new' %></p>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "truck_no", nil, @trucks, "truck_no" %></th>
        <th scope="col"><%= sortable "vin_number", 'VIN',  @trucks, "truck_no" %></th>
        <th scope="col"><%= sortable "truck_type", nil,  @trucks, "truck_no" %></th>
        <th scope="col"><%= sortable "owner", nil,  @trucks, "truck_no" %></th>
        <th scope="col"><%= sortable "total_kilometres", nil,  @trucks, "truck_no" %></th>
        <th scope="col"><%= sortable "current_location", nil,  @trucks, "truck_no" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.truck_no %></td>
        <td><%= truck.vin_number %></td>
        <td><%= truck.truck_type %></td>
        <td><%= link_to truck.owner, "/trucks/#{truck.owner}" %></td>
        <td><%= truck.total_kilometres %></td>
        <td><%= truck.current_location %></td>
        <td><%= link_to '', truck, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_truck_path(truck), :class => 'button edit', :title => 'Edit' %> <%= link_to '', truck, method: :delete, data: { confirm: 'Are you sure you want to delete this truck?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @trucks %>
</section>
