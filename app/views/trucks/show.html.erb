<% company = Company.find @truck.owner %>
<section>
  <h2>Truck #<%= @truck.id %></h2>
  <p id="notice"><%= notice %></p>
  <div class="float-left">
    <dl>
      <dt><strong>Truck no:</strong></dt><dd><%= @truck.truck_no %></dd>
      <dt><strong>VIN:</strong></dt><dd><%= @truck.vin_number %></dd>
      <dt><strong>Truck type:</strong></dt><dd><%= @truck.truck_type %></dd>
      <dt><strong>License plate:</strong></dt><dd><%= @truck.license_plate %></dd>
      <dt><strong>License expires:</strong></dt><dd><%= @truck.license_expires %></dd>
      <dt><strong>Owner:</strong></dt><dd><%= link_to company.name, "/companies/#{@truck.owner}" %></dd>
      <dt><strong>Make:</strong></dt><dd><%= @truck.make %></dd>
      <dt><strong>Model:</strong></dt><dd><%= @truck.model %></dd>
      <dt><strong>Manufactured year:</strong></dt><dd><%= @truck.manufactured_year %></dd>
      <dt><strong>Total kilometres:</strong></dt><dd><%= @truck.total_kilometres %></dd>
      <dt><strong>Current location:</strong></dt><dd><%= @truck.current_location %></dd>
      <dt><strong>Color:</strong></dt><dd><%= @truck.color %></dd>
    </dl>
    <p><%= link_to 'Edit', edit_truck_path(@truck), :class => 'button edit' %> <%= link_to 'Back', trucks_path, :class => 'button back' %></p>
  </div>
  <%= image_tag @truck.photo.url, :class => 'photo' %>
</section>
