<section>
  <h2>Maintenance Records</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Vehicle</th>
        <th scope="col">Trip</th>
        <th scope="col">Date</th>
        <th scope="col">Cost</th>
        <th scope="col">Maintenance type</th>
        <th scope="col">Description</th>
        <th scope="col">Kilometres</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= maintenance.vehicle_id %></td>
        <td><%= maintenance.trip_id %></td>
        <td><%= maintenance.date %></td>
        <td><%= maintenance.cost %></td>
        <td><%= maintenance.maintenance_type %></td>
        <td><%= maintenance.description %></td>
        <td><%= maintenance.kilometres %></td>
        <td><%= link_to 'Show', maintenance %> <%= link_to 'Edit', edit_maintenance_path(maintenance) %> <%= link_to 'Destroy', maintenance, method: :delete, data: { confirm: 'Are you sure you want to delete this maintenance record?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Maintenance record', new_maintenance_path %></p>
</section>
