<section>
  <h2>Announcements</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Posted by</th>
        <th scope="col">Title</th>
        <!--<th scope="col">Content</th>-->
        <th scope="col">Date posted</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.posted_by %></td>
        <td><%= announcement.title %></td>
        <!--<td><%= announcement.content %></td>-->
        <td><%= announcement.date_posted %></td>
        <td><%= link_to '', announcement, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_announcement_path(announcement), :class => 'button edit', :title => 'Edit' %> <%= link_to '', announcement, method: :delete, data: { confirm: 'Are you sure you want to delete this announcement?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Announcement', new_announcement_path, :class => 'button new' %></p>
</section>
