  <%= f.label :distance %>
  <%= f.text_field :distance, :required => 'required', :placeholder => ValidationValues.p_integer, :format => ValidationValues.c_integer %>
  <%= f.label :primary_driver %>
  <%= f.text_field :primary_driver, :required => 'required', :placeholder => ValidationValues.p_integer, :format => ValidationValues.c_integer %>
  <%= f.label :secondary_driver %>
  <%= f.text_field :secondary_driver, :placeholder => ValidationValues.p_integer, :format => ValidationValues.c_integer %>
  <%= f.label :primary_quick_pay %>
  <%= f.text_field :primary_quick_pay, :placeholder => ValidationValues.p_double, :format => ValidationValues.c_double %>
  <%= f.label :secondary_quick_pay %>
  <%= f.text_field :secondary_quick_pay, :placeholder => ValidationValues.p_double, :format => ValidationValues.c_double %>
  <%= f.label :primary_driver_pay %>
  <%= f.text_field :primary_driver_pay, :required => 'required', :placeholder => ValidationValues.p_double, :format => ValidationValues.c_double %>
  <%= f.label :secondary_driver_pay %>
  <%= f.text_field :secondary_driver_pay, :placeholder => ValidationValues.p_double, :format => ValidationValues.c_double %>
  <%= f.label :misc_cost %>
  <%= f.text_field :misc_cost, :placeholder => ValidationValues.p_double, :format => ValidationValues.c_double %>
  <%= f.label :comments %>
  <%= f.text_field :comments, :format => ValidationValues.c_content %>
  <div class="footer">
    <%= f.submit %>
  </div>
<% end %>
