<section>
  <h2>Shipments</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Broker</th>
        <th scope="col">Driver</th>
        <th scope="col">Customer</th>
        <th scope="col">Trip</th>
        <th scope="col">Shipment no</th>
        <th scope="col">Pickup time</th>
        <th scope="col">Delivery time</th>
        <th scope="col">Rate</th>
        <th scope="col">Skid count</th>
        <th scope="col">Partial</th>
        <th scope="col">Distance</th>
        <th scope="col">Cartage</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.broker_id %></td>
        <td><%= shipment.driver_id %></td>
        <td><%= shipment.customer_id %></td>
        <td><%= shipment.trip_id %></td>
        <td><%= shipment.shipment_no %></td>
        <td><%= shipment.pickup_time %></td>
        <td><%= shipment.delivery_time %></td>
        <td><%= shipment.rate %></td>
        <td><%= shipment.skid_count %></td>
        <td><%= shipment.partial %></td>
        <td><%= shipment.distance %></td>
        <td><%= shipment.cartage %></td>
        <td><%= link_to 'Show', shipment %> <%= link_to 'Edit', edit_shipment_path(shipment) %> <%= link_to 'Destroy', shipment, method: :delete, data: { confirm: 'Are you sure you want to delete this shipment?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Shipment', new_shipment_path %></p>
</section>
