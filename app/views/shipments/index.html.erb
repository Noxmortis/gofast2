<section>
  <h2>Shipments</h2>
  <p><%= link_to 'New Shipment', new_shipment_path, :class => 'button new' %></p>
	<%= form_tag shipments_path, :method => 'get', :class => 'search' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
		<%= label_tag :column %>
		<%= select_tag :column, options_for_select(Shipment.translated_searchable_columns(['id']), params[:column]) %>
		<%= label_tag :search %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Submit' %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "shipment_no", nil, @shipments, "shipment_no" %></th>
        <th scope="col"><%= sortable "broker_id", nil, @shipments, "shipment_no" %></th>
        <th scope="col"><%= sortable "customer_id", nil, @shipments, "shipment_no" %></th>
        <th scope="col"><%= sortable "trip_id", nil, @shipments, "shipment_no" %></th>
        <th scope="col"><%= sortable "cartage_id", nil, @shipments, "shipment_no" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.shipment_no %></td>
        <td><%= link_to shipment.broker_id, "/companies/#{shipment.broker_id}" %></td>
        <td><%= link_to shipment.customer_id, "/companies/#{shipment.customer_id}" %></td>
        <td><%= link_to shipment.trip_id, "/trips/#{shipment.trip_id}" %></td>
        <td><%= link_to shipment.cartage_id, "/trips/#{shipment.cartage_id}" %></td>
        <td><%= link_to '', shipment, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_shipment_path(shipment), :class => 'button edit', :title => 'Edit' %> <%= link_to '', shipment, method: :delete, data: { confirm: 'Are you sure you want to delete this shipment?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
