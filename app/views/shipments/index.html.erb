<section>
  <h2>Shipments</h2>
	<%= form_tag shipments_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    Search: 
    <%= text_field_tag :search %>
	by 
	<%= select_tag :search_column, options_for_select(Shipment.translated_searchable_columns(['id']), params[:search_column]) %>
    <%= submit_tag "Search" %>
  </p>
<% end %>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "broker_id", nil, @shipments, "broker_id" %></th>
        <th scope="col"><%= sortable "customer_id", nil, @shipments, "broker_id" %></th>
        <th scope="col"><%= sortable "trip_id", nil, @shipments, "broker_id" %></th>
        <th scope="col"><%= sortable "rate", nil, @shipments, "broker_id" %></th>
        <th scope="col"><%= sortable "partial", nil, @shipments, "broker_id" %></th>
        <th scope="col"><%= sortable "distance", nil, @shipments, "broker_id" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= shipment.broker_id %></td>
        <td><%= shipment.customer_id %></td>
        <td><%= shipment.trip_id %></td>
        <td><%= shipment.rate %></td>
        <td><%= shipment.partial %></td>
        <td><%= shipment.distance %></td>
        <td><%= link_to 'Show', shipment, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_shipment_path(shipment), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', shipment, method: :delete, data: { confirm: 'Are you sure you want to delete this shipment?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Shipment', new_shipment_path, :class => 'ym-button ym-add' %></p>
</section>
