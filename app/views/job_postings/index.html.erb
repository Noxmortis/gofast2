<h1>Job Postings</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Post date</th>
    <th>Closing date</th>
    <th>Description</th>
    <th>Requirements</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @job_postings.each do |job_posting| %>
  <tr>
    <td><%= job_posting.title %></td>
    <td><%= job_posting.post_date %></td>
    <td><%= job_posting.closing_date %></td>
    <td><%= job_posting.description %></td>
    <td><%= job_posting.requirements %></td>
    <td><%= link_to 'Show', job_posting, :class => 'ym-button ym-xsmall ym-play ym-success' %></td>
    <td><%= link_to 'Edit', edit_job_posting_path(job_posting), :class => 'ym-button ym-xsmall ym-edit ym-warning' %></td>
    <td><%= link_to 'Destroy', job_posting, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'ym-button ym-xsmall ym-delete ym-danger' %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Job posting', new_job_posting_path, :class => 'ym-button ym-add' %>
