<section>
  <h2>Job Postings</h2>
	<%= form_tag job_postings_path, :method => 'get' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
		<%= label_tag :column %>
		<%= select_tag :column, options_for_select(JobPosting.translated_searchable_columns(['id']), params[:column]) %>
		<%= label_tag :search %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Submit' %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "title", nil, @job_postings, "title" %></th>
        <th scope="col"><%= sortable "post_date", nil, @job_postings, "title" %></th>
        <th scope="col"><%= sortable "closing_date", nil, @job_postings, "title" %></th>
        <th scope="col"><%= sortable "description", nil, @job_postings, "title" %></th>
        <th scope="col"><%= sortable "requirements", nil, @job_postings, "title" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @job_postings.each do |job_posting| %>
      <tr>
        <td><%= job_posting.title %></td>
        <td><%= job_posting.post_date %></td>
        <td><%= job_posting.closing_date %></td>
        <td><%= job_posting.description %></td>
        <td><%= job_posting.requirements %></td>
        <td><%= link_to 'Show', job_posting, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_job_posting_path(job_posting), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', job_posting, method: :delete, data: { confirm: 'Are you sure you want to delete this job posting?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Job posting', new_job_posting_path, :class => 'ym-button ym-add' %></p>
</section>
