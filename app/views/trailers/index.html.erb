<section>
  <h2>Trailers</h2>
	<%= form_tag trailers_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    Search: 
    <%= text_field_tag :search %>
	by 
	<%= select_tag :search_column, options_for_select(Trailer.translated_searchable_columns(['id']), params[:search_column]) %>
    <%= submit_tag "Search" %>
  </p>
<% end %>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "trailer_no", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "trailer_type", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "license_plate", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "make", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "model", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "manufactured_year", nil, @trailers, "trailer_no" %></th>
        <th scope="col"><%= sortable "vin_number", nil, @trailers, "trailer_no" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @trailers.each do |trailer| %>
      <tr>
        <td><%= trailer.trailer_no %></td>
        <td><%= trailer.trailer_type %></td>
        <td><%= trailer.license_plate %></td>
        <td><%= trailer.make %></td>
        <td><%= trailer.model %></td>
        <td><%= trailer.manufactured_year %></td>
        <td><%= trailer.vin_number %></td>
        <td><%= link_to 'Show', trailer, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_trailer_path(trailer), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', trailer, method: :delete, data: { confirm: 'Are you sure you want to delete this trailer?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Trailer', new_trailer_path, :class => 'ym-button ym-add' %></p>
</section>
