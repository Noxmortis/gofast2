<section>
  <h2>Drivers</h2>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "first_name" %></th>
        <th scope="col"><%= sortable "last_name" %></th>
        <th scope="col"><%= sortable "street" %></th>
        <th scope="col"><%= sortable "unit" %></th>
        <th scope="col"><%= sortable "city" %></th>
        <th scope="col"><%= sortable "postal_code" %></th>
        <th scope="col"><%= sortable "home_phone" %></th>
        <th scope="col"><%= sortable "cell_phone" %></th>
        <th scope="col"><%= sortable "business_name" %></th>
        <th scope="col"><%= sortable "hst_no" %></th>
        <th scope="col"><%= sortable "comments" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.street %></td>
        <td><%= driver.unit %></td>
        <td><%= driver.city %></td>
        <td><%= driver.postal_code %></td>
        <td><%= driver.home_phone %></td>
        <td><%= driver.cell_phone %></td>
        <td><%= driver.business_name %></td>
        <td><%= driver.hst_no %></td>
        <td><%= driver.comments %></td>
        <td><%= link_to 'Show', driver, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_driver_path(driver), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure you want to delete this driver?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </thead>
  </table>
  <p><%= link_to 'New Driver', new_driver_path, :class => 'ym-button ym-add' %></p>
</section>
