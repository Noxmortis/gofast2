<section>
  <h2>Drivers</h2>
	<%= form_tag drivers_path, :method => 'get', :class => 'search' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
		<%= label_tag :column %>
		<%= select_tag :column, options_for_select(Driver.translated_searchable_columns(['id']), params[:column]) %>
		<%= label_tag :search %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Submit' %>
  <% end %>
  <p><%= link_to 'New Driver', new_driver_path, :class => 'button new' %></p>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "first_name", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "last_name", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "street", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "unit", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "city", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "postal_code", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "home_phone", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "cell_phone", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "business_name", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "hst_no", nil, @drivers, "first_name" %></th>
        <th scope="col"><%= sortable "comments", nil, @drivers, "first_name" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.street %></td>
        <td><%= driver.unit %></td>
        <td><%= driver.city %></td>
        <td><%= driver.postal_code %></td>
        <td><%= driver.home_phone %></td>
        <td><%= driver.cell_phone %></td>
        <td><%= driver.business_name %></td>
        <td><%= driver.hst_no %></td>
        <td><%= driver.comments %></td>
        <td><%= link_to '', driver, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_driver_path(driver), :class => 'button edit', :title => 'Edit' %> <%= link_to '', driver, method: :delete, data: { confirm: 'Are you sure you want to delete this driver?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </thead>
  </table>
</section>
