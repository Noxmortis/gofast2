<section>
  <h2>Skids</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Shipment</th>
        <th scope="col">Company</th>
        <th scope="col">Product description</th>
        <th scope="col">Weight</th>
        <th scope="col">Oversized</th>
        <th scope="col">Pickup location</th>
        <th scope="col">Delivery location</th>
        <th scope="col">Pickup time</th>
        <th scope="col">Delivery time</th>
        <th scope="col">Warehouse delivery time</th>
        <th scope="col">Warehouse pickup time</th>
        <th scope="col">Skid count</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @skids.each do |skid| %>
      <tr>
        <td><%= skid.shipment_id %></td>
        <td><%= skid.company_id %></td>
        <td><%= skid.product_desc %></td>
        <td><%= skid.weight %></td>
        <td><%= skid.oversized %></td>
        <td><%= skid.pickup_location %></td>
        <td><%= skid.delivery_location %></td>
        <td><%= skid.pickup_time %></td>
        <td><%= skid.delivery_time %></td>
        <td><%= skid.warehouse_delivery_time %></td>
        <td><%= skid.warehouse_pickup_time %></td>
        <td><%= skid.skid_count %></td>
        <td><%= link_to 'Show', skid %> <%= link_to 'Edit', edit_skid_path(skid) %> <%= link_to 'Destroy', skid, method: :delete, data: { confirm: 'Are you sure you want to delete this skid?' } %></td>
        <td><%= link_to 'Show', skid, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_skid_path(skid), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', skid, method: :delete, data: { confirm: 'Are you sure you want to delete this skid?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Skid', new_skid_path, :class => 'ym-button ym-add' %></p>
</section>
