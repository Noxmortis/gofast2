<section>
  <h2>Skids</h2>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "shipment_id", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "product_desc", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "weight", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "oversized", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "pickup_location", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "delivery_location", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "pickup_time", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "delivery_time", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "warehouse_delivery_time", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "warehouse_pickup_time", nil, @skids, "shipment_id" %></th>
        <th scope="col"><%= sortable "skid_count", nil, @skids, "shipment_id" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @skids.each do |skid| %>
      <tr>
        <td><%= skid.shipment_id %></td>
        <td><%= skid.product_desc %></td>
        <td><%= skid.weight %></td>
        <td><%= skid.oversized %></td>
        <td><%= skid.pickup_location %></td>
        <td><%= skid.delivery_location %></td>
        <td><%= skid.pickup_time %></td>
        <td><%= skid.delivery_time %></td>
        <td><%= skid.warehouse_delivery_time %></td>
        <td><%= skid.warehouse_pickup_time %></td>
        <td><%= skid.skid_count %></td>
        <td><%= link_to 'Show', skid, :class => 'ym-button ym-small ym-play ym-success' %> <%= link_to 'Edit', edit_skid_path(skid), :class => 'ym-button ym-small ym-edit ym-warning' %> <%= link_to 'Destroy', skid, method: :delete, data: { confirm: 'Are you sure you want to delete this skid?' }, :class => 'ym-button ym-small ym-delete ym-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Skid', new_skid_path, :class => 'ym-button ym-add' %></p>
</section>
