<section>
  <h2>Trip #<%= @trip.id %></h2>
  <p id="notice"><%= notice %></p>
  <p><strong>Truck:</strong> <%= @trip.truck_id %></p>
  <p><strong>Trailer:</strong> <%= @trip.trailer_id %></p>
  <p><strong>Start date:</strong> <%= @trip.start_date %></p>
  <p><strong>End date:</strong> <%= @trip.end_date %></p>
  <p><strong>Primary driver:</strong> {FROM SHIPMENT}</p>
  <p><strong>Secondary driver:</strong> {FROM SHIPMENT}</p>
  <p><strong>Load bar count:</strong> <%= @trip.load_bar_count %></p>
  <p><strong>Kilometres accumulated:</strong> <%= @trip.accumulated_kilometres %></p>
  <p><strong>Profit:</strong> ${CREATE PROFIT HERE}</p>
  <p><strong>Fuel cost:</strong> <%= number_to_currency @trip.fuel_cost %></p>
  <p><strong>Misc. cost</strong> <%= number_to_currency @trip.misc_cost %></p>
  <p><strong>Comments</strong> <%= @trip.comments %></p>
  <p><%= link_to 'Edit', edit_trip_path(@trip), :class => 'button edit' %> <%= link_to 'Back', trips_path, :class => 'button back' %></p>
</section>
