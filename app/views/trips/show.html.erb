<section>
  <h2>Trip #<%= @trip.id %></h2>
  <p id="notice"><%= notice %></p>
  <dl>
    <dt><strong>Truck:</strong></dt><dd><%= @trip.truck_id %></dd>
    <dt><strong>Trailer:</strong></dt><dd><%= @trip.trailer_id %></dd>
    <dt><strong>Start date:</strong></dt><dd><%= @trip.start_date %></dd>
    <dt><strong>End date:</strong></dt><dd><%= @trip.end_date %></dd>
    <dt><strong>Primary driver:</strong></dt><dd>{FROM SHIPMENT}</dd>
    <dt><strong>Secondary driver:</strong></dt><dd>{FROM SHIPMENT}</dd>
    <dt><strong>Load bar count:</strong></dt><dd><%= @trip.load_bar_count %></dd>
    <dt><strong>Kilometres accumulated:</strong></dt><dd><%= @trip.accumulated_kilometres %> <abbr title="kilometre">km</abbr></dd>
    <dt><strong>Profit:</strong></dt><dd><%= number_to_currency '23.00' %>{CREATE PROFIT HERE}</dd>
    <dt><strong>Fuel cost:</strong></dt><dd><%= number_to_currency @trip.fuel_cost %></dd>
    <dt><strong>Misc. cost</strong></dt><dd><%= number_to_currency @trip.misc_cost %></dd>
    <dt><strong>Comments</strong></dt><dd><%= @trip.comments %></dd>
  </dl>
  <p><%= link_to 'Edit', edit_trip_path(@trip), :class => 'button edit' %> <%= link_to 'Back', trips_path, :class => 'button back' %></p>
</section>
