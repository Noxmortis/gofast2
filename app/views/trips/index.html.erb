<section>
  <h2>Trips</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Truck</th>
        <th scope="col">Trailer</th>
        <th scope="col">Expense</th>
        <th scope="col">Start date</th>
        <th scope="col">End date</th>
        <th scope="col">Load bar count</th>
        <th scope="col">Kilometres accumulated</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.truck_id %></td>
        <td><%= trip.trailer_id %></td>
        <td><%= trip.expense_id %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.load_bar_count %></td>
        <td><%= trip.kilometres_accumulated %></td>
        <td><%= link_to '', trip, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_trip_path(trip), :class => 'button edit', :title => 'Edit' %> <%= link_to '', trip, method: :delete, data: { confirm: 'Are you sure you want to delete this trip?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Trip', new_trip_path, :class => 'button new' %></p>
</section>
