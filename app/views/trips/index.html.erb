<section>
  <h2>Trips</h2>
  <%= form_tag trips_path, :method => 'get' do %>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
		<%= label_tag :column %>
		<%= select_tag :column, options_for_select(Trip.translated_searchable_columns(['id']), params[:column]) %>
		<%= label_tag :search %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Submit' %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th scope="col"><%= sortable "truck_id", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "trailer_id", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "expense_id", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "start_date", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "end_date", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "load_bar_count", nil, @trips, "truck_id" %></th>
        <th scope="col"><%= sortable "kilometres_accumulated", nil, @trips, "truck_id" %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.truck_id %></td>
        <td><%= trip.trailer_id %></td>
        <td><%= trip.expense_id %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.load_bar_count %></td>
        <td><%= trip.kilometres_accumulated %></td>
        <td><%= link_to '', trip, :class => 'button show', :title => 'Show' %> <%= link_to '', edit_trip_path(trip), :class => 'button edit', :title => 'Edit' %> <%= link_to '', trip, method: :delete, data: { confirm: 'Are you sure you want to delete this trip?' }, :class => 'button destroy', :title => 'Delete' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <p><%= link_to 'New Trip', new_trip_path, :class => 'button new' %></p>
</section>
