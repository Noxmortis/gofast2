class TripRostersController < ApplicationController
  # GET /trip_rosters
  # GET /trip_rosters.json
  include ApplicationHelper
  def index
    @trip_rosters = TripRoster.search(params[:search], params[:search_column]).order(sort_column(TripRoster, "shipment_id") + " " + sort_direction)

    respond_to do |format|
      format.html # index.html.erb
      format.json { render json: @trip_rosters }
    end
  end

  # GET /trip_rosters/1
  # GET /trip_rosters/1.json
  def show
    @trip_roster = TripRoster.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.json { render json: @trip_roster }
    end
  end

  # GET /trip_rosters/new
  # GET /trip_rosters/new.json
  def new
    @trip_roster = TripRoster.new

    respond_to do |format|
      format.html # new.html.erb
      format.json { render json: @trip_roster }
    end
  end

  # GET /trip_rosters/1/edit
  def edit
    @trip_roster = TripRoster.find(params[:id])
  end

  # POST /trip_rosters
  # POST /trip_rosters.json
  def create
    @trip_roster = TripRoster.new(params[:trip_roster])

    respond_to do |format|
      if @trip_roster.save
        format.html { redirect_to @trip_roster, notice: 'Trip roster was successfully created.' }
        format.json { render json: @trip_roster, status: :created, location: @trip_roster }
      else
        format.html { render action: "new" }
        format.json { render json: @trip_roster.errors, status: :unprocessable_entity }
      end
    end
  end

  # PUT /trip_rosters/1
  # PUT /trip_rosters/1.json
  def update
    @trip_roster = TripRoster.find(params[:id])

    respond_to do |format|
      if @trip_roster.update_attributes(params[:trip_roster])
        format.html { redirect_to @trip_roster, notice: 'Trip roster was successfully updated.' }
        format.json { head :no_content }
      else
        format.html { render action: "edit" }
        format.json { render json: @trip_roster.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /trip_rosters/1
  # DELETE /trip_rosters/1.json
  def destroy
    @trip_roster = TripRoster.find(params[:id])
    @trip_roster.destroy

    respond_to do |format|
      format.html { redirect_to trip_rosters_url }
      format.json { head :no_content }
    end
  end
end
